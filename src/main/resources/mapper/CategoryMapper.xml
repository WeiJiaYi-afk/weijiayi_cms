<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
     "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
     
     <mapper namespace="com.wjy.dao.CategoryDao">
     	
     	<!-- 查询 -->
     	<select id="selects" resultType="Article">
     		SELECT * FROM cms_category
     	</select>
     	
     	<!-- 根据id查询-->
     	<select id="selectById" resultType="Article">
     		SELECT * FROM cms_category WHERE id=#{id}
     	</select>

     	<!-- 添加 -->
     	<insert id="insert">
	     	INSERT INTO cms_category(name,channel_id)VALUES 
			(#{name},#{channel_id})
     	</insert>
     	
     	<!-- 修改 -->
     	<update id="update">
			UPDATE cms_category
			 SET name=#{name},channel_id=#{channel_id} 
			WHERE id=#{id}
     	</update>
     	
     	<!-- 删除 -->
     	<delete id="delete">
     		DELETE FROM cms_category WHERE id in(${ids})
     	</delete>
     
     
     </mapper>