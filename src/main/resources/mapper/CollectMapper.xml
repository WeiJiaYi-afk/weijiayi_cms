<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE mapper
   PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
     "http://mybatis.org/dtd/mybatis-3-mapper.dtd">
     
     <mapper namespace="com.wjy.dao.CollectDao">
     
     	<!-- 查询 -->
     	<select id="selects" resultType="Article">
     		SELECT * FROM cms_collect
     	</select>
     	
     	<!-- 根据id查询-->
     	<select id="selectById" resultType="Article">
     		SELECT * FROM cms_collect WHERE id=#{id}
     	</select>

     	<!-- 添加 -->
     	<insert id="insert">
			INSERT INTO cms_collect(text,url,created,user_id)VALUES 
			(#{text},#{url},#{created},#{user_id})
     	</insert>
     	
     	<!-- 修改 -->
     	<update id="update">
			UPDATE cms_collect
			 SET text=#{text},url=#{url},created=#{created},user_id=#{user_id} 
			WHERE id=#{id}
     	</update>
     	
     	<!-- 删除 -->
     	<delete id="delete">
     		DELETE FROM cms_collect WHERE id in(${ids})
     	</delete>
     	
     </mapper>